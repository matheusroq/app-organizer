<%- include('partials/header.ejs') %>
    <%- include('partials/navbar.ejs') %>
        <div class="form-container">
            <h1>Faça seu login:</h1>
            <form action="/login" method="POST" class="form" id="form-login">
                <input type="email" name="email" class="input" placeholder="Digite seu email">
                <input type="password" name="senha" class="input" placeholder="Digite sua senha">
                <button class="btn">Entrar</button>
            </form>
            <div id="response" class="response">
                <% if(errors) { %>
                    <p class="invalid">
                        <%= errors %>
                    </p>
                </div>
                <% } %>
                    <div class="link-container">
                        <a class="link" href="/cadastro/index">Não tem conta? Cadastre-se aqui.</a>
                    </div>
        </div>


        <%- include('partials/footer.ejs') %>