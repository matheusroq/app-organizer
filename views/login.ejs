<%- include('partials/header.ejs') %> 
    <%- include('partials/navbar.ejs') %>
    <div class="container">
        <dv class="card mt-5">
            <div class="card-header">
            </div>
            <div class="form-container">
                <h1>Faça seu login:</h1>
                <form action="/login" method="POST" class="form" id="form-login">
                    <div class="form-group">
                        <input type="email" name="email" class="input" placeholder="Digite seu email">
                    </div>
                    <div class="form-group">
                        <input type="password" name="senha" class="input" placeholder="Digite sua senha">
                    </div>
                    <button type="submit" class="btn">Entrar</button>
                </form>
                <div id="response"></div>
                <% if(errors) { %>
                    <p style="color: red; font-weight: bold;"><%= errors %> </p>
               <% } %> 
               <div class="link-container">         
                    <a class="link" href="/cadastro/index">Não tem conta? Cadastre-se aqui.</a>
            </div>
            </div>
        </div>

       
    </div>

